<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="510.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyecto.ResultadoControlador">

    <top>
        <VBox prefWidth="510.0" spacing="10" style="-fx-padding: 15;">
            <Label fx:id="nombre" alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="510" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Resultados">
            <font>
               <Font name="Arial" size="12.0" />
            </font></Label>
        </VBox>
    </top>

    <center>
        <BarChart fx:id="grafico">
            <xAxis>
                <CategoryAxis label="Tipo" />
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" autoRanging="false" label="Cantidad" tickUnit="1" upperBound="7" />
            </yAxis>

        </BarChart>
    </center>
   <bottom>
      <Button alignment="TOP_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#salir" prefHeight="26.0" prefWidth="39.0" text="Salir" textAlignment="RIGHT" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="400.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
